{
   "name"       : "neeftarah/little-todo",
   "description": "Simple task manager develop with Silex, Twig, Bootstrap...",
   "keywords"   : ["todoMVC", "todo", "to-do", "task", "Silex"],
   "homepage"   : "https://github.com/neeftarah/little-todo",
   "license"    : "GPL-3.0+",
   "authors"    : [
      {
         "name"    : "Jérémy MOREAU",
         "email"   : "jmoreau.dev@gmail.com",
         "homepage": "https://github.com/neeftarah"
      }
   ],
   "require": {
      "php"                   : ">=5.3.3",
      "silex/silex"           : "~1.2",
      "silex/web-profiler"    : "~1.0",
      "mheap/silex-assetic"   : "~1.0",
      "kriswallsmith/assetic" : "~1.0",
      "twig/twig"             : "~1.15",
      "monolog/monolog"       : "~1.9",
      "doctrine/dbal"         : "~2.4",
      "leafo/lessphp"         : "~0.4",
      "symfony/config"        : "~2.5",
      "symfony/console"       : "~2.5",
      "symfony/form"          : "~2.5",
      "symfony/finder"        : "~2.5",
      "symfony/security"      : "~2.5",
      "symfony/translation"   : "~2.5",
      "symfony/validator"     : "~2.5",
      "symfony/yaml"          : "~2.5",
      "symfony/twig-bridge"   : "~2.5",
      "symfony/monolog-bridge": "~2.5",
      "twitter/bootstrap"     : "~3.1"
   },
   "require-dev": {
      "phpunit/phpunit"       : "~4.1",
      "symfony/browser-kit"   : "~2.5",
      "symfony/css-selector"  : "~2.5",
      "symfony/dom-crawler"   : "~2.5"
   },
   "autoload": {
      "psr-0": {
         "Todo": "src/"
      }
   },
   "repositories": [
      {
         "type": "vcs",
         "url" :  "https://github.com/neeftarah/little-todo"
      }
   ]
}